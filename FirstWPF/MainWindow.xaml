<Window x:Class="MyFirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPF"
        mc:Ignorable="d"
        Title="My First WPF" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://wonderfulengineering.com/wp-content/uploads/2014/10/image-wallpaper-15-1024x768.jpg"/>
        </Grid.Background>
        <Button Content="Click Here" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Height="51" Width="148" Background="White" Click="Button_Click"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Center" Margin="0,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter your name:" HorizontalAlignment="Left" Margin="214,133,0,0" VerticalAlignment="Top" Width="104"/>

    </Grid>
</Window>

